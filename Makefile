NAME = libft.a
CC = gcc
FLAG = -Wall -Wextra -Werror
SRC = $(shell find . ! -name "ft_lst*.c" -name "ft_*.c")
BONUS = $(shell find . -name "ft_lst*.c")


all: $(NAME)

$(NAME):
	$(CC) $(FLAG) -c $(SRC)
	ar rc $(NAME) *.o
bonus:
	$(CC) $(FLAG) -c $(BONUS)
	ar rc $(NAME) *.o
clean:
	/bin/rm -f  *.o
fclean: clean
	/bin/rm -f $(NAME)

re: fclean all

.PHONY: all bonus clean fclean re
